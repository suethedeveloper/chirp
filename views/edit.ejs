<% include partials/header.ejs %>

<div class="container margin-top-20">
  <div class="logo border-radius-10">
    Chirp! The Next Big Thang
  </div>
</div>

<div class="container margin-top-10">
  <div class="one-chirp border-radius-10">
    <div class="row">
      <div class="col-sm-1">
        <img src="../images/birds/bird<%= chirp.id %>.png" class="img-responsive" />
      </div>
      <form action="/update/<%= chirp.id %>?_method=put" method="post">
        <div class="col-sm-11">
          <div class="margin-top-10">
            <textarea id="chirp-text" name="chirp_text" class="form-control"><%= chirp.chirp_text %></textarea>
          </div>
          <div class="margin-top-10 txt-right">
          <button class="btn btn-primary">Update Chirp</button></form>
          <form action="/remove/<%= chirp.id %>?_method=delete" method="post"><button class="btn btn-danger">Delete Chirp</button></form>
            
          </div>
        </div>
      </div>
    
  </div>
</div>

<% include partials/footer.ejs %>